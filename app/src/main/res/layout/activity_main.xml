<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/islemler"
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:layout_above="@id/result"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="39dp"
        android:background="#F5A3A9AA"
        android:backgroundTint="#676868"
        android:backgroundTintMode="screen"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="32sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttons_layout"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"

        android:background="#00F3E9CD"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="64dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_C"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#E8C763"

                android:shadowColor="#D13B3B"
                android:text="C"
                android:textColor="#0B0202"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"
                app:rippleColor="#000000" />

            <Button
                android:id="@+id/button_open"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#E8C763"
                android:text="("
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_close"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#E8C763"
                android:text=")"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_div"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:backgroundTint="#00BCD4"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_7"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#ED42E5"

                android:text="7"
                android:textColor="#0B0202"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"
                app:rippleColor="#000000" />

            <Button
                android:id="@+id/button_8"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="8"
                android:backgroundTint="#ED42E5"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"/>

            <Button
                android:id="@+id/button_9"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#ED42E5"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_multi"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="x"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_4"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="4"
                android:backgroundTint="#ED42E5"
                android:textColor="#0B0202"
                android:textSize="35dp"
                android:textStyle="bold"
                app:rippleColor="#000000"
                app:cornerRadius="150dip"/>

            <Button
                android:id="@+id/button_5"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="5"
                android:backgroundTint="#ED42E5"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"/>

            <Button
                android:id="@+id/button_6"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="6"
                android:backgroundTint="#ED42E5"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"/>

            <Button
                android:id="@+id/button_minus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_1"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="1"
                android:backgroundTint="#ED42E5"
                android:textColor="#0B0202"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"
                app:rippleColor="#000000"
                />

            <Button
                android:id="@+id/button_2"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="2"
                android:backgroundTint="#ED42E5"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"/>

            <Button
                android:id="@+id/button_3"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="3"
                android:backgroundTint="#ED42E5"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"/>

            <Button
                android:id="@+id/button_plus"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_AC"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#E8C763"
                android:text="AC"
                android:textColor="#0B0202"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip"
                app:rippleColor="#000000" />

            <Button
                android:id="@+id/button_0"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:text="0"
                android:backgroundTint="#ED42E5"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_Dot"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"

                android:text="."
                android:backgroundTint="#E8C763"
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />

            <Button
                android:id="@+id/button_equals"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_weight="1"
                android:backgroundTint="#00BCD4"
                android:text="="
                android:textColor="@color/black"
                android:textSize="35dp"
                android:textStyle="bold"
                app:cornerRadius="150dip" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>